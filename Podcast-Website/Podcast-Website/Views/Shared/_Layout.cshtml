<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Podcast_Website</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>

    @if (ViewData["Title"] != "Home Page")
    {

        <header>
            <nav class="navbar navbar-expand-lg navbar-light " id="navbar">
                <div class="container">
                    <a class="navbar-brand text-uppercase  Home-nav " href="/">Podcast<span style="color: #1248ff;font-size:33px;font-weight:bold">.</span></a>
                    <div class="collapse navbar-collapse " id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto ">



                            <li class="nav-item">
                                <a class="nav-link text-nav" href="/podcast"><span class="nav-text1">All Podcast</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-nav" href="/Channels"><span class="nav-text1">Channels</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-nav" href="/randompodcast"><span class="nav-text1">Explore</span></a>
                            </li>
                            <partial name="_LoginPartial" />

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <hr style="margin-top:-10px" />
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer1">
        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 item text">
                        <h5>About</h5>
                        <p>Podcast website where you can have your own channel and the ability to upload audio. Podcast website offer Discover random podcast.</p>
                    </div>
                    <div class="col-sm-6 col-md-3 item">

                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h6> Quick Links</h6>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="/podcast">All Podcastt</a></li>
                            <li><a href="/Channels">Channels</a></li>
                            <li><a href="/randompodcast">Random Podcast</a></li>
                        </ul>
                    </div>

                </div>
                <p class="copyright">Podcast Website © 2021</p>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
